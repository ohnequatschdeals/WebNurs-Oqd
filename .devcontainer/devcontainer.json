{
  "name": "WebNurs-OQD",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  "postCreateCommand": "corepack enable && corepack prepare pnpm@9.6.0 --activate && pnpm install",

  "forwardPorts": [3000],

  "customizations": {
